<Page x:Class="ELREORS.Admin_History"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ELREORS"
      mc:Ignorable="d" 
      d:DesignHeight="733" d:DesignWidth="1366"
      Title="Admin_History" Background="White"
      ShowsNavigationUI="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width= "*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Filter : " Margin="10" FontSize="16" />
            <ComboBox x:Name="cb_filter" Grid.Column="1" Margin="5,5,30,5" FontSize="16"/>
            <ComboBox x:Name="cb_tanggal" Grid.Column="2" Margin="5" FontSize="16" />
            <Button x:Name="btn_print" Content="Print" Grid.Column="3" Margin="5" FontSize="16" Click="btn_print_Click"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <DataGrid x:Name="dataGrid" Margin="5" ColumnWidth="*" FontSize="16" CanUserReorderColumns="False" CanUserResizeColumns="False"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2">
            <TextBlock Text="Jumlah Nota : 0" Margin="10" FontSize="16" />
            <TextBlock Text="Total : Rp -" Margin="10" FontSize="16" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Page>
