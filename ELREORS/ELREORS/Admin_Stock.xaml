<Page x:Class="ELREORS.Admin_Stock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ELREORS"
      mc:Ignorable="d" 
      d:DesignHeight="733" d:DesignWidth="1366"
      Title="Admin_Stock" 
      ShowsNavigationUI="False"
      Margin="0">

    <Grid>
        <TextBox x:Name="tb_search" FontSize="18" HorizontalAlignment="Left" Height="40" Width="430"  Margin="699,18,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Button x:Name="btn_search" Content="Search" HorizontalAlignment="Left" Margin="1182,18,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Click="btn_search_Click" Foreground="#FFF1DABF">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>
        <DataGrid x:Name="dg_Stock" ColumnWidth="*" CanUserReorderColumns="false"  FontSize="24" HorizontalAlignment="Left" Height="480" Width="1280" Margin="40,90,0,0" VerticalAlignment="Top" IsReadOnly="true" CanUserSortColumns="false" Loaded="dg_Stock_Loaded" AutoGeneratedColumns="dg_Stock_AutoGeneratedColumns"/>
        <Label Content="Stok Bahan" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="#FFF1DABF"/>
        <Button x:Name="btn_insert" Content="INSERT" HorizontalAlignment="Left" Margin="40,596,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Click="btn_insert_Click" Foreground="#FFF1DABF">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_update" Content="UPDATE" HorizontalAlignment="Left" Margin="200,596,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Click="btn_update_Click" Foreground="#FFF1DABF">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_print" Visibility="Hidden" Content="PRINT ALL" HorizontalAlignment="Left" Margin="1181,596,0,0" VerticalAlignment="Top" Width="140" Height="66" FontSize="18" Click="btn_print_Click"/>

    </Grid>
</Page>
