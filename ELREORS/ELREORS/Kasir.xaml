<Window x:Class="ELREORS.Kasir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELREORS"
        mc:Ignorable="d"
        Title="Kasir" Height="768" Width="1366">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Content="NO MEJA" HorizontalAlignment="Left" Margin="24,47,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1"/>

        <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="27,93,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn1_Click"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="115,93,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn5_Click_1"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="115,170,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn6_Click_1"/>
        <Button x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="27,170,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn2_Click"/>
        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="27,245,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn3_Click_1"/>
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="115,245,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn7_Click_1"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="27,324,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn4_Click_1"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="115,324,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn8_Click_1"/>

        <Label x:Name="labelTanggal"  Content="Tanggal: dd/mm/yyyy" Grid.Column="2" HorizontalAlignment="Right" Margin="439,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="mejudul" Content="MEJA" Grid.Column="2" HorizontalAlignment="Center" Margin="253,47,223,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Width="96"/>
        <Button x:Name="btnCancel" Content="CANCEL" Grid.Column="2" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Bottom" Width="85" Height="34" Click="btnCancel_Click"/>
        <DataGrid x:Name="dgKasir" Grid.Column="2" Margin="10,95,10,102"/>
        <Label x:Name="pajak" Content="Pajak 10%" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,70" VerticalAlignment="Bottom" Width="195" FontSize="11"/>
        <Label x:Name="totHarga" Content="Total Harga: Rp. " Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,49" VerticalAlignment="Bottom" FontWeight="Bold" Width="231"/>
        <Button x:Name="btnPrint" Content="PRINT NOTA" Grid.Column="2" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" Width="100" Height="34"/>

    </Grid>
</Window>
