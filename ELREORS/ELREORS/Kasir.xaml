<Window x:Class="ELREORS.Kasir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELREORS"
        mc:Ignorable="d"
        Title="Kasir" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Label Content="NO MEJA" HorizontalAlignment="Left" Margin="13,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Grid.Column="1"/>
        
        <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="16,56,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn1_Click"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="104,56,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn5_Click_1"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="104,133,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn6_Click_1"/>
        <Button x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="16,133,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn2_Click"/>
        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="16,208,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn3_Click_1"/>
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="104,208,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn7_Click_1"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="16,287,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn4_Click_1"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="104,287,0,0" VerticalAlignment="Top" Width="60" Height="60" FontWeight="Bold" Grid.Column="1" Click="btn8_Click_1"/>
        
        <Label x:Name="labelTanggal"  Content="Tanggal: dd/mm/yyyy" Grid.Column="2" HorizontalAlignment="Left" Margin="439,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="mejudul" Content="MEJA" Grid.Column="2" HorizontalAlignment="Left" Margin="250,56,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Button x:Name="btnCancel" Content="CANCEL" Grid.Column="2" HorizontalAlignment="Left" Margin="10,357,0,0" VerticalAlignment="Top" Width="85" Height="34" Click="btnCancel_Click"/>
        <DataGrid x:Name="dataGrid" Grid.Column="2" Margin="10,95,10,85" SelectionChanged="dataGrid_SelectionChanged" Grid.Row="2"/>
        <Button x:Name="btnPrint" Content="PRINT NOTA" Grid.Column="2" HorizontalAlignment="Left" Margin="462,357,0,0" VerticalAlignment="Top" Width="100" Height="34"/>

    </Grid>
</Window>
