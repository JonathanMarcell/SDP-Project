<Page x:Class="ELREORS.Admin_Pegawai"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ELREORS"
      mc:Ignorable="d" 
      d:DesignHeight="733" d:DesignWidth="1366"
      Title="Admin_Pegawai"
      ShowsNavigationUI="False">

    <Grid>
        <Label Content="Pegawai" HorizontalAlignment="Left" Margin="40,10,0,0" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="#FFF1DABF"/>
        <DataGrid x:Name="dg_pegawai" CanUserSortColumns="false" FontSize="24" CanUserReorderColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Height="450" Margin="94,117,0,0" VerticalAlignment="Top" Width="584" MouseDoubleClick="dg_pegawai_MouseDoubleClick" AutoGeneratedColumns="dg_pegawai_AutoGeneratedColumns"/>
        <Label Content="List Pegawai" FontSize="22" HorizontalAlignment="Left" Margin="94,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Show : " FontSize="18" HorizontalAlignment="Left" Margin="98,575,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbShowAdmin" Content="Admin"  HorizontalAlignment="Left" Margin="202,578,0,0" VerticalAlignment="Top" Checked="cbShowAdmin_Checked" Unchecked="cbShowAdmin_Checked">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox x:Name="cbShowKaryawan" Content="Karyawan"  HorizontalAlignment="Left" Margin="202,610,0,0" VerticalAlignment="Top" Checked="cbShowKaryawan_Checked" Unchecked="cbShowKaryawan_Checked">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox x:Name="cbShowAktif" Content="Aktif" HorizontalAlignment="Left" Margin="465,578,0,0" VerticalAlignment="Top" Checked="cbShowAktif_Checked" Unchecked="cbShowAktif_Checked">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        <CheckBox x:Name="cbShowNonAktif" Content="Non-Aktif"  HorizontalAlignment="Left" Margin="465,610,0,0" VerticalAlignment="Top" Checked="cbShowNonAktif_Checked" Unchecked="cbShowNonAktif_Checked">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1.7" ScaleY="1.7"/>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <TextBox x:Name="tb_search" FontSize="18" HorizontalAlignment="Left" Height="40" Width="430" Margin="699,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  VerticalContentAlignment="Center"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="1182,18,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Foreground="#FFF1DABF" Click="btnSearch_Click">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>

        <Label Content="Biodata" FontSize="22" HorizontalAlignment="Left" Margin="776,78,0,0" VerticalAlignment="Top"/>

        <Label Content="Kode :" FontSize="20" HorizontalAlignment="Right" Margin="0,148,450,0" VerticalAlignment="Top" />
        <Label x:Name="lb_kode" Content="-" FontSize="20" HorizontalAlignment="Left" Margin="950,148,0,0" VerticalAlignment="Top" />
        <Label Content="Nama :" FontSize="20" HorizontalAlignment="Right" Margin="0,198,450,0" VerticalAlignment="Top"/>
        <Label Content="Jenis Kelamin :" FontSize="20" HorizontalAlignment="Right" Margin="0,248,450,0" VerticalAlignment="Top"/>
        <Label Content="Status :" FontSize="20" HorizontalAlignment="Right" Margin="0,298,450,0" VerticalAlignment="Top"/>
        <Label Content="IsAdmin :" FontSize="20" HorizontalAlignment="Right" Margin="0,348,450,0" VerticalAlignment="Top"/>

        <TextBox x:Name="tb_nama" HorizontalAlignment="Left" FontSize="20" Height="32" Margin="944,203,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="363"/>

        <RadioButton x:Name="rb_setGenderL" IsChecked="True" Content="Laki-Laki" GroupName="setGender" HorizontalAlignment="Left" Margin="959,259,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>
        <RadioButton x:Name="rb_setGenderP" Content="Perempuan" GroupName="setGender" HorizontalAlignment="Left" Margin="1088,259,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>

        <RadioButton x:Name="rb_Status1" IsChecked="True" Content="Aktif" GroupName="setStatus" HorizontalAlignment="Left" Margin="959,309,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>
        <RadioButton x:Name="rb_Status0" Content="Non-Aktif" GroupName="setStatus" HorizontalAlignment="Left" Margin="1088,309,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>

        <RadioButton x:Name="rb_setAdminTrue" Content="Yes" GroupName="setAdmin" HorizontalAlignment="Left" Margin="958,359,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>
        <RadioButton x:Name="rb_setAdminFalse" IsChecked="True" Content="No" GroupName="setAdmin" HorizontalAlignment="Left" Margin="1088,359,0,0" VerticalAlignment="Top">
            <RadioButton.LayoutTransform>
                <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
            </RadioButton.LayoutTransform>
        </RadioButton>

        <Button x:Name="btn_Clear" Content="CLEAR" HorizontalAlignment="Left" Margin="778,426,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Foreground="#FFF1DABF" Click="btn_Clear_Click">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>

        <Button x:Name="btn_Insert" Content="INSERT" HorizontalAlignment="Left" Margin="1038,426,0,0" VerticalAlignment="Top" Width="124" Height="40" FontSize="18" Foreground="#FFF1DABF" Click="btn_Insert_Click">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn_update" IsEnabled="false" Content="UPDATE" HorizontalAlignment="Left" Margin="1182,426,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Foreground="#FFF1DABF" Click="btn_update_Click">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>

        <Button x:Name="btn_insertmode" Content="REMOVE" HorizontalAlignment="Left" Margin="1182,145,0,0" VerticalAlignment="Top" Width="125" Height="40" FontSize="18" Foreground="#FFF1DABF" Click="btn_insertmode_Click">
            <Button.Background>
                <ImageBrush ImageSource="button square wide.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Page>
