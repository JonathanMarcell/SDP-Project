<Window x:Class="ELREORS.NoMeja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELREORS"
        mc:Ignorable="d"
        Title="NoMeja" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nomor Meja:" Margin="210,150,0,0" Width="200" Height="50" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbNo" Text="" Width="100" Height="40" FontSize="32" Margin="410,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnSubmit" Width="120" Height="60" Content="Submit" FontSize="32" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="390,220,0,0" Click="btnSubmit_Click"/>
    </Grid>
</Window>
