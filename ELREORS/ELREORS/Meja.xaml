<Window x:Class="ELREORS.Meja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELREORS"
        mc:Ignorable="d"
        Title="Meja" Height="768" Width="1366">
    <Grid Margin="0,2,0,-1.6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbNama" Grid.Column="0" Margin="10,0,0,0">
            <Label.Content>Meja 1</Label.Content>
            <Label.FontSize>32</Label.FontSize>
            <Label.Width>auto</Label.Width>
            <Label.Height>auto</Label.Height>
            <Label.HorizontalAlignment>left</Label.HorizontalAlignment>
            <Label.VerticalAlignment>top</Label.VerticalAlignment>
        </Label>
        <Label Name="oList" Grid.Column="0" Margin="10,50,0,0">
            <Label.Content>Order List</Label.Content>
            <Label.FontSize>15</Label.FontSize>
            <Label.Width>auto</Label.Width>
            <Label.Height>auto</Label.Height>
            <Label.VerticalAlignment>top</Label.VerticalAlignment>
            <Label.HorizontalAlignment>left</Label.HorizontalAlignment>
        </Label>
        <DataGrid Name="dataOrder" Height="auto" Margin="10,80,20,50"/>
        <Label Name="Menu" Grid.Column="1">
            <Label.Content>Menu</Label.Content>
            <Label.FontSize>30</Label.FontSize>
            <Label.Width>auto</Label.Width>
            <Label.Height>auto</Label.Height>
            <Label.VerticalAlignment>top</Label.VerticalAlignment>
            <Label.HorizontalAlignment>center</Label.HorizontalAlignment>
        </Label>
        <Button Name="btnBersih" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16" Margin="10,10,0,10" Content="Bersihkan" Click="btnBersih_Click"/>
        <Button Name="btnPesan" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="16" Margin="120,10,0,10" Content="Pesan" Click="btnPesan_Click"/>
        <Label Name="Food" Grid.Column="1" Margin="0,30,0,0">
            <Label.Content>Food</Label.Content>
            <Label.FontSize>20</Label.FontSize>
            <Label.Width>auto</Label.Width>
            <Label.Height>auto</Label.Height>
            <Label.VerticalAlignment>top</Label.VerticalAlignment>
            <Label.HorizontalAlignment>center</Label.HorizontalAlignment>
        </Label>
        <Button x:Name="btnPrev" Content="Previous" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Height="30" Width="100" Margin="10,10,120,10" Click="btnPrev_Click"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2" Width="100" Height="30" Margin="10,10,10,10" Click="btnNext_Click"/>

        <Image x:Name="img1" Width="180" Height="180" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,10,10"/>
        <Image x:Name="img2" Width="180" Height="180" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,290,10,10"/>
        <Image x:Name="img3" Width="180" Height="180" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,510,10,10"/>

        <Label x:Name="lbN1" Content="nasi goreng" Grid.Column="2" Height="50" Width="200" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,80,10,10"/>
        <Label x:Name="lbK1" Content="nasi digoreng dengan minyak" Grid.Column="2" Height="40" Width="450" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,120,10,10"/>
        <Label x:Name="Rp1" Content="Rp." Grid.Column="2" Height="40" Width="40" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,150,10,10"/>
        <Label x:Name="lbH1" Content="" Grid.Column="2" Height="40" Width="420" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,150,10,10"/>
        <Button x:Name="btnMin1" Content="-" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,200,10,10" Grid.Column="2" Click="btnMin1_Click"/>
        <Label x:Name="lbJ1" Content="0" Width="30" Height="50" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="2" Margin="245,200,10,10"/>
        <Button x:Name="btnPlus1" Content="+" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,200,10,10" Grid.Column="2" Click="btnPlus1_Click"/>

        <Label x:Name="lbN2" Content="nasi goreng" Grid.Column="2" Height="50" Width="200" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,290,10,10"/>
        <Label x:Name="lbK2" Content="nasi digoreng dengan minyak" Grid.Column="2" Height="40" Width="450" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,330,10,10"/>
        <Label x:Name="Rp2" Content="Rp." Grid.Column="2" Height="40" Width="40" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,360,10,10"/>
        <Label x:Name="lbH2" Content="" Grid.Column="2" Height="40" Width="420" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,360,10,10"/>
        <Button x:Name="btnMin2" Content="-" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,410,10,10" Grid.Column="2" Click="btnMin2_Click"/>
        <Label x:Name="lbJ2" Content="0" Width="30" Height="50" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="2" Margin="245,410,10,10"/>
        <Button x:Name="btnPlus2" Content="+" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,410,10,10" Grid.Column="2" Click="btnPlus2_Click"/>

        <Label x:Name="lbN3" Content="nasi goreng" Grid.Column="2" Height="50" Width="200" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,510,10,10"/>
        <Label x:Name="lbK3" Content="nasi digoreng dengan minyak" Grid.Column="2" Height="40" Width="450" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,550,10,10"/>
        <Label x:Name="Rp3" Content="Rp." Grid.Column="2" Height="40" Width="40" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,580,10,10"/>
        <Label x:Name="lbH3" Content="" Grid.Column="2" Height="40" Width="420" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,580,10,10"/>
        <Button x:Name="btnMin3" Content="-" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,630,10,10" Grid.Column="2" Click="btnMin3_Click"/>
        <Label x:Name="lbJ3" Content="0" Width="30" Height="50" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="2" Margin="245,630,10,10"/>
        <Button x:Name="btnPlus3" Content="+" Width="30" Height="50" FontSize="30" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,630,10,10" Grid.Column="2" Click="btnPlus3_Click"/>
    </Grid>
</Window>
